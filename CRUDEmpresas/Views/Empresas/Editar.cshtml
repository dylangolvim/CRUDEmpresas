@model CRUDEmpresas.Models.Empresas

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Empresas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompaniesID" />
            <div class="form-group">
                <label asp-for="CompaniesName" class="control-label"></label>
                <input asp-for="CompaniesName" class="form-control" />
                <span asp-validation-for="CompaniesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompaniesCNPJ" class="control-label"></label>
                <input asp-for="CompaniesCNPJ" class="form-control" />
                <span asp-validation-for="CompaniesCNPJ" class="text-danger"></span>
            </div>
